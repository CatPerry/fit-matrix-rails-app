            <li><h2>Muscle Type: <%= exercise['exercise']['muscle_type']%></h2></li>
          </ul>
        </main>
      <% end %>
    


    <%# LOWER BODY ADVANCED %>
    <% elsif params["q1".to_sym] == "2" && params["q2".to_sym] == "3" %>
      <% if exercise['exercise']['bodypart'] == "lower" && (exercise['exercise']['difficulty'] == 3 || exercise['exercise']['difficulty'] == 2) %>
