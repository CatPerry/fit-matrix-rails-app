            <li><h2>Muscle Type: <%= exercise['exercise']['muscle_type']%></h2></li>
          </ul>
        </main>
      <% end %>
    


    <%# ABS BEGINNER%>
    <% elsif params["q1".to_sym] == "3" && params["q2".to_sym] == "1"%>
      <% if exercise['exercise']['bodypart'] == "abs" && exercise['exercise']['difficulty'] == 1 %>
