<%# WORKOUT TIMER%>
<div align="center">
  <div class="stopwatch">
    <h3>Workout Timer</h3>
    <div id="work">WORK</div>
    <div id="output"><p><span>Round</span><br>
    <span id="outputRound">1</span></p>
    <span>Time</span><br/><span id="output2">00:00:00</span></div>
    
    <div>
        Number of Rounds:&nbsp;<input type="text" id="numRounds" name="Rounds" size="6">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        Length of Work:&nbsp;<input type="text" id="numWork" name="Work" size="6">&nbsp;(seconds)&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        Length of Rest:&nbsp;<input type="text" id="numRest" name="Rest" size="6">&nbsp;(seconds)
    </div>
    <br>
    <div id="controls">
        <button id="startPause" onclick="startPause()">Start</button>
        <button onclick="reset()">Reset</button><br><br>
        <span id="error"></span>
    </div>

    </div>

    <%# YOUTUBE SIDEBAR%>
    <aside>
          <h1>Demo Corner: Watch exercises to get started!</h1>
            <div id="buttons">
              <label> <input id="query" value="How to..." placeholder='Enter move name' type="text"/><button id="search-button" onclick="keyWordsearch()">Search</button></label>
            </div>
          <ul id="results"></ul>
                        
      
    </aside>
  </div>
</div>
</div>




