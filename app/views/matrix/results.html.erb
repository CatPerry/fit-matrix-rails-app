<%= javascript_include_tag 'matrixmain'%> 

<%# HEADER/NAV BAR%>
<header>
  <%=link_to matrix_main_path, class: "" do %>
    <%= image_tag "navfitmatrixred-v2-copy.png", class: "nav"%>
    <h1 class="headerfont">FIT MATRIX</h1><br>
