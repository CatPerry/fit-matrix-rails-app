<!DOCTYPE html>
<html>
  <head>
    <title>FitMatrix</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application'%> 
    <%= javascript_include_tag 'auth'%>  
    <%= javascript_include_tag 'search2'%>  
    <%= favicon_link_tag "favicon-jumprope.png" %>
    <link href="https://fonts.googleapis.com/css?family=Audiowide|Exo+2|Josefin+Sans|Jura|Krona+One|Monoton|Orbitron|Raleway+Dots|Righteous" rel="stylesheet"> 

  </head>

  <body> 
  
    <header>
      <%=link_to matrix_main_path, class: "" do %>
        <nav><%= image_tag "navfitmatrixred-v2-copy.png", class: "nav"%></nav>
        <h1 class="headerfont">FIT MATRIX</h1><br>
        <h1 class="dots">Find Your Mix, Finish Fit.</h1>
      <%end%>
    </header>

    
        <%= yield %>
     
        <div class="container">
        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>">
            <%= value %>
          </div>
        <% end %>
      </div>

      <div class="flex-grid">
        <div class="col">
          <aside>
            
            <div id="container">
              <h1>Demo Corner: Watch exercises to get started!</h1>
                <div id="buttons">
                  <label> <input id="query" value="How to..." placeholder='Enter move name' type="text"/><button id="search-button" onclick="keyWordsearch()">Search</button></label>
                </div>
              <ul id="results"></ul>
            </div>                       
          
          </aside>
        </div>
      </div>
   
    </div>
  
    
  
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
    <script src="https://apis.google.com/js/client.js?onload=googleApiClientReady"></script>
    <script src="https://apis.google.com/js/client.js?onload=init"></script>
    <script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
    <script src="https://apis.google.com/js/client.js?onload=googleApiClientReady"></script>

  </body>
</html>
